<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/puzzleResult"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginTop="367dp"
        android:text="@string/puzzleResult"
        app:layout_constraintBottom_toTopOf="@+id/sourceImgContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.772"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/puzzleContainer"
        app:layout_constraintVertical_bias="0.079" />

    <TableLayout
        android:id="@+id/puzzleContainer"
        android:layout_width="270dp"
        android:layout_height="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img7"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgout"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                tools:src="@drawable/_null"
                android:focusable="true" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/CounterTime"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginTop="367dp"
        android:text="@string/timecounter"
        app:layout_constraintBottom_toTopOf="@+id/sourceImgContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/puzzleContainer"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/startPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/confirmSelection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endPuzzle"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puzzleContainer"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/endPuzzle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/submitSelection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puzzleContainer"
        app:layout_constraintVertical_bias="0.179" />

    <TableLayout
        android:id="@+id/sourceImgContainer"
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img1"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img2"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img3"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img4"
                android:focusable="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img5"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img6"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img7"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                app:srcCompat="@drawable/img8"
                android:focusable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>